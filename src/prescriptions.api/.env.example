# Application
APP_NAME="Prescriptions API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/smarthealth_prescriptions

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=
PRESCRIPTION_SAVED_TOPIC=prescription-saved
PRESCRIPTION_SUGGESTED_TOPIC=prescription-suggested
APPOINTMENT_CONFIRMED_TOPIC=appointment-confirmed
PAYMENT_COMPLETED_TOPIC=payment-completed
APPOINTMENT_CONFIRMED_SUBSCRIPTION=prescriptions-appointment-confirmed
PAYMENT_COMPLETED_SUBSCRIPTION=prescriptions-payment-completed

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=120
ENABLE_REDIS_CACHE=false

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30.0
ENABLE_LLM_SUGGESTIONS=true

# Azure OpenAI (if using Azure)
USE_AZURE_OPENAI=false
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# ML
MODEL_STORAGE_PATH=./models

# Security
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
USE_IN_MEMORY_BUS=true
